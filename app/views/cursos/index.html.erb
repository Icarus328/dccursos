

<%= notice %>
<%if current_user%>
    <h1>CURSOS</h1>

    <table align='center'>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Teacher</th>
                <th>Price</th>
                <th>Category</th>
                <th colspan='3'></th>
            </tr>
        </thead>
        <tbody>
            <% @cursos.each do |curso| %>
                <tr>
                    <td><%= curso.name %></td>
                    <td><%= curso.description %></td>
                    <td><%= curso.duration %></td>
                    <td><%= curso.teacher %></td>
                    <td><%= curso.price %></td>
                    <td><%= curso.category %></td>
                    <td><%= link_to 'View details', cursos_show_path(:id => curso.id) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to 'Upload a new curso', cursos_new_path %>
    <%= link_to 'Volver a la pagina anterior', mainpage_index_path%>
<%end%>