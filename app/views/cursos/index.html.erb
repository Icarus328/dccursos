<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>

<h1 class="title is-1 has-text-white">Cursos</h1>

<%= notice %>

<form class="form-inline my-2 my-lg-0" action="/search">
    <input class="form-control mr-sm-2" name="q" type="text" placeholder="Search by nombre" aria-label="Search">
    <button class="btn btn-outline-sucess my-2 my-sm-0 has-text-black" type="submit">Search</button>
    </form>

    <form class="form-inline my-2 my-lg-0" action="/search_categoria">
    <input class="form-control mr-sm-2" name="q_categoria" type="text" placeholder="Search by categoria" aria-label="Search">
    <button class="btn btn-outline-sucess my-2 my-sm-0 has-text-black" type="submit">Search</button>




<br>
<br>
<div class="columns">
  <% @cursos.each do |curso| %>
  <div class="column has-background-link-dark">
  <a class="has-text-white is-size-2 has-text-weight-bold"><%= curso.name%></a>
  <br>
  <p class="has-text-white">Descripción: <%= curso.description%></p>
  <p class="has-text-white">Duración: <%= curso.duration%></p>
  <p class="has-text-white">Profesor: <%= curso.teacher%></p>
  <p class="has-text-white">Precio: <%= curso.price%></p>
  <p class="has-text-white">Categoria: <%= curso.category%></p>
  <p class="has-text-white"><span class="icon-text">
  <span class="icon has-text-white">
    <i class="fas fa-arrow-right"></i>
  </span>
  <span class="a has-text-white"><%= link_to 'Ver detalles', cursos_show_path(:id =>curso.id) %></span>
</span>
</p>
</div>
<% end %>

</div>

