<h1 class="title is-1 has-text-white">Edita tu curso</h1>

<%= notice %>
<%if current_user.id == @curso.user_id or current_user.admin%>
    <%= form_with(model: @curso, method: :patch, url: cursos_update_path(:id => @curso.id)) do |form| %>

        <div>
            <%= form.label :Name %>
            <%= form.text_field :name %>
        </div>

        <div>
            <%= form.label :Description %>
            <%= form.text_field :description %>
        </div>

        <div>
            <%= form.label :Duration %>
            <%= form.text_field :duration %>
        </div>

        <div>
            <%= form.label :Teacher %>
            <%= form.text_field :teacher %>
        </div>

        <div>
            <%= form.label :Price %>
            <%= form.text_field :price %>
        </div>

        <div>
            <%= form.label :Category %>
            <%= form.text_field :category %>
        </div>

        <div>
            <%= form.submit 'Editar curso' %>
        </div>

    <% end %>
