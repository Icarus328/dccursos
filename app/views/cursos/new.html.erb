<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>

<h1 class="title is-1 has-text-white">Subir un nuevo curso</h1>

<%= notice %>
<%if current_user%>
    <%= form_with(model: @curso, method: :post) do |form| %>

        <div>
            <%= form.label :Name %>
            <%= form.text_field :name %>
        </div>

        <div>
            <%= form.label :Description %>
            <%= form.text_field :description %>
        </div>

        <div>
            <%= form.label :Duration %>
            <%= form.text_field :duration %>
        </div>

        <div>
            <%= form.label :Teacher %>
            <%= form.text_field :teacher %>
        </div>

        <div>
            <%= form.label :Price %>
            <%= form.text_field :price %>
        </div>

        <div>
            <%= form.label :Category %>
            <%= form.text_field :category %>
        </div>

        <div>
            <%= form.number_field :user_id, id: :question_user_id,
            class:"form-control", value: current_user.id, type: :hidden%>
        </div>

        <div>
            <%= form.submit 'Crear curso' %>
        </div>

    <% end %>
    <span class="icon-text">
  <span class="icon has-text-white">
    <i class="fas fa-arrow-right"></i>
  </span>
  <span><td><%= link_to 'volver', cursos_index_path %></td></span>
</span>


<%end%>
