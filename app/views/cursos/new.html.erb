<h1>Upload a new curso</h1>

<%= notice %>
<%if current_user%>
    <%= form_with(model: @curso, method: :post) do |form| %>

        <div>
            <%= form.label :Name %>
            <%= form.text_field :name %>
        </div>

        <div>
            <%= form.label :Description %>
            <%= form.text_field :description %>
        </div>

        <div>
            <%= form.label :Duration %>
            <%= form.text_field :duration %>
        </div>

        <div>
            <%= form.label :Teacher %>
            <%= form.text_field :teacher %>
        </div>

        <div>
            <%= form.label :Price %>
            <%= form.text_field :price %>
        </div>

        <div>
            <%= form.label :Category %>
            <%= form.text_field :category %>
        </div>

        <div>
            <%= form.number_field :user_id, id: :curso_user_id,
            class:"form-control", value: current_user.id, type: :hidden%>
        </div>

        <div>
            <%= form.submit 'Create curso' %>
        </div>

    <% end %>
    <%= link_to 'Go back', cursos_index_path %>
<%end%>
