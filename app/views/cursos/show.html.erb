<%= notice %>
<%if current_user%>
    <h1>
        <%= @curso.name %>
    </h1>

    <p>
        <strong>Description: </strong>
        <%= @curso.description %>
    </p>

    <p>
        <strong>Duration: </strong>
        <%= @curso.duration %>
    </p>

    <p>
        <strong>Teacher: </strong>
        <%= @curso.teacher %>
    </p>

    <p>
        <strong>Price: </strong>
        <%= @curso.price %>
    </p>

    <p>
        <strong>Category: </strong>
        <%= @curso.category %>
    </p>

    <%= link_to 'Go back', cursos_index_path %>
    <%if current_user.id == @curso.user_id or current_user.admin%>
        <%= link_to 'Edit curso', cursos_edit_path(:id => @curso.id) %>
        <%= link_to 'Delete curso', cursos_delete_path(:id => @curso.id), method: :delete %>
    <%end%>
    <%= link_to 'View reviews', reviews_index_path %>
    <%= link_to 'View aulas', aulas_index_path %>
<%end%>
