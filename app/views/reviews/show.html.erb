<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
<%= notice %>
<%if current_user%>
    <h1 class="title is-1 has-text-white"><%=  @review.description %></h1>
<br>
    <h3 class="title is-3 has-text-white"><%= @review.punctuation %></h3>

    <%if current_user.id == @review.user_id or current_user.admin%>
    <span class="icon-text">
  <span class="icon has-text-white">
    <i class="fas fa-arrow-right"></i>
  </span>
  <span><td><%= link_to 'Editar review', reviews_edit_path(:id => @review.id)%></td></span>
</span>

<span class="icon-text">
  <span class="icon has-text-white">
    <i class="fas fa-arrow-right"></i>
  </span>
  <span><td><%= link_to 'Borrar review', reviews_delete_path(:id => @review.id), method: :delete %></td></span>
</span>
<%end%>
<%end%>

<span class="icon-text">
  <span class="icon has-text-white">
    <i class="fas fa-arrow-right"></i>
  </span>

  <span><td><%= link_to 'Volver', reviews_index_path(:id => @review.curso_id)%></td></span>
</span>



   