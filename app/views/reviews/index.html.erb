<h1>reviews</h1>

<%= notice %>

<table align='center'>
    <thead>
        <tr>
            <th>Description</th>
            <th>Punctuation</th>
            <th>Curso asociado</th>
            <th colspan='3'></th>
        </tr>
    </thead>
    <tbody>
        <% @reviews.each do |review| %>
            <tr>
                <td><%= review.description %></td>
                <td><%= review.punctuation %></td>
                <td><%= review.cursoasociado %></td>
                <td><%= link_to 'View details', reviews_show_path(:id => review.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Upload a new review', reviews_new_path %>
<%= link_to 'Go back', cursos_index_path %>