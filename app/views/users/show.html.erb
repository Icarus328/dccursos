  <span class="icon is-large has-text-white">
    <i class="fas fa-book fa-2x"></i>
  </span>
</span>

  <% @cursos_de_user =  User.joins(:cursos).where(cursos: { user_id: @user.id }).pluck("name", "user_id") %>
