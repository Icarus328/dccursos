<h1>answers</h1>

<%= notice %>
<%if current_user%>

    <table align='center'>
        <thead>
            <tr>
                <th>content</th>
                <th>Associated question</th>
                <th colspan='3'></th>
            </tr>
        </thead>
        <tbody>
            <% @answers.each do |answer| %>
                <tr>
                    <td><%= answer.content %></td>
                    <td><%= answer.associated_question %></td>
                    <td><%= link_to 'View details', answers_show_path(:id => answer.id) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to 'Upload a new answer', answers_new_path %>
    <%= link_to 'Go back to cursos index', cursos_index_path %>
<%end%>
